{
    "manifest_version": 2,
    "name": "Extension",
    "description": "Proof of concept",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": [
                "https://www.bbc.co.uk/iplayer/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "activeTab",
        "storage",
        "https://ajax.googleapis.com/"
    ]
}